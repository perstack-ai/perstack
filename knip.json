{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreDependencies": ["vitest", "ts-dedent"],
  "ignoreExportsUsedInFile": true,
  "ignoreBinaries": ["perstack"],
  "ignore": [
    "dist/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test/**/*",
    "docs/**/*",
    "scripts/**/*",
    "examples/**/*",
    "e2e/**/*",
    "benchmarks/**/*"
  ],
  "workspaces": {
    "apps/perstack": {
      "entry": ["bin/cli.ts", "src/**/*.ts"]
    },
    "packages/tui": {
      "ignore": ["src/components/index.ts", "src/utils/index.ts"]
    }
  }
}
