{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules", ".next"]
}
